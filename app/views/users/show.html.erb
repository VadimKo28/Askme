<div class="user-box">
  <h2 class="title-lg mt-lg"><%= @user.name %></h2>

  <% if current_user == @user%>
  <p class="mt mb-lg">
  <%= link_to fa_icon("pencil"), edit_user_path(@user)%>
  </p>
  <%end%>
  <p class="text-bold mt mb-lg"><%= content_tag 'span', display_nickname(@user), class: 'mr-sm' %>
</p>
</div>


<% if @questions.any? %>
  <div class="container">
    <%= link_to "Спроси меня", new_question_path(user_nickname: @user),
      class: "button button-yellow" %>
  </div>

  <div class="container mt-sm">
    <h2 class="title-lg">
      <%= @questions.count%>
      <%= inclinator(@questions.count, 'вопрос', 'вопроса', 'вопросов')%>
    </h2>
  </div>

  <% @questions.each do |question| %>
    <div class="mt-sm container ">
      <%= render question %>
    </div>
  <% end %>
<% else %>
  <%= render partial: "empty_state_questions", locals: {user: @user} %>
<% end %>

